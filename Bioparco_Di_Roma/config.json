    "Tables": [
      {
        "Name": "Habitat",
        "Alias": "Master",
        "Query": "SELECT * FROM Habitat",
        "KeyColumn": "hid",
        "Columns": [
          {
            "Name": "hid",
            "DisplayName": "Habitat ID",
            "Type": "int",
            "IsPrimaryKey": true,
            "IsEditable": false
          },
          {
            "Name": "landscape",
            "DisplayName": "Landscape",
            "Type": "string",
            "IsRequired": true
          },
          {
            "Name": "size",
            "DisplayName": "Size",
            "Type": "float",
            "IsRequired": true,
            "Validation": {
              "MinValue": 0
            }
          },
          {
            "Name": "temperature",
            "DisplayName": "Temperature",
            "Type": "float",
            "IsRequired": true,
            "Validation": {
              "MinValue": -50,
              "MaxValue": 50
            }
          },
          {
            "Name": "humidity",
            "DisplayName": "Humidity",
            "Type": "float",
            "IsRequired": true,
            "Validation": {
              "MinValue": 0,
              "MaxValue": 100
            }
          }
        ]
      },
      {
        "Name": "Animal",
        "Alias": "Detail",
        "Query": "SELECT * FROM Animal",
        "KeyColumn": "aid",
        "Columns": [
          {
            "Name": "aid",
            "DisplayName": "Animal ID",
            "Type": "int",
            "IsPrimaryKey": true,
            "IsEditable": false
          },
          {
            "Name": "name",
            "DisplayName": "Name",
            "Type": "string",
            "IsRequired": true
          },
          {
            "Name": "species",
            "DisplayName": "Species",
            "Type": "string",
            "IsRequired": true
          },
          {
            "Name": "age",
            "DisplayName": "Age",
            "Type": "int",
            "IsRequired": true,
            "Validation": {
              "MinValue": 0,
              "MaxValue": 100
            }
          },
          {
            "Name": "gender",
            "DisplayName": "Gender",
            "Type": "string",
            "IsRequired": true,
            "Validation": {
              "AllowedValues": ["M", "F"]
            }
          },
          {
            "Name": "vertebrate_class",
            "DisplayName": "Vertebrate Class",
            "Type": "string",
            "IsRequired": true,
            "Validation": {
              "AllowedValues": ["Mammal", "Bird", "Reptile", "Amphibian", "Fish"]
