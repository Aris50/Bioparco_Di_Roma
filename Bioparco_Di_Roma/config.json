            "IsRequired": true,
            "Validation": {
              "MinValue": 0
            }
          },
          {
            "Name": "vid",
            "DisplayName": "Vet ID",
            "Type": "int",
            "IsRequired": true,
            "Validation": {
              "MinValue": 1
            }
          }
        ]
      }
    ],
    "Relationships": [
      {
        "ParentAlias": "Master",
        "ChildAlias": "Detail",
        "ParentKey": "hid",
        "ChildForeignKey": "hid",
        "Name": "HabitatAnimals"
      }
    ],
    "CrudProcedures": {
      "Master": {
        "Select": "SELECT * FROM Habitat",
        "Insert": "INSERT INTO Habitat (hid, landscape, size, temperature, humidity) VALUES (@hid, @landscape, @size, @temperature, @humidity)",
        "Update": "UPDATE Habitat SET landscape = @landscape, size = @size, temperature = @temperature, humidity = @humidity WHERE hid = @hid",
        "Delete": "DELETE FROM Habitat WHERE hid = @hid"
      },
      "Detail": {
        "Select": "SELECT * FROM Animal",
        "Insert": "INSERT INTO Animal (aid, name, species, age, gender, vertebrate_class, bodytemperature, weight, vid, hid) VALUES (@aid, @name, @species, @age, @gender, @vertebrate_class, @bodytemperature, @weight, @vid, @hid)",
        "Update": "UPDATE Animal SET name = @name, species = @species, age = @age, gender = @gender, vertebrate_class = @vertebrate_class, bodytemperature = @bodytemperature, weight = @weight, vid = @vid WHERE aid = @aid",
        "Delete": "DELETE FROM Animal WHERE aid = @aid"
      }
    }
  }
